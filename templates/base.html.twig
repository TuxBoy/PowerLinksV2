<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
    <title>{% block title 'Mon super site' %} - Powerlinks</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
</head>
<body>

<nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('root') }}">Power links</a>
        <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a href="{{ path('link.index') }}" title="Voir la liste complète des liens" class="nav-link">Liens</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item">
                        <a href="{{ path('user.profile', {id: app.user.id}) }}" class="nav-link"><img src="{{ app.user.avatar }}" alt="{{ app.user.username }}" class="rounded-circle"></a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item" style="line-height: 2;"><a href="{{ path('admin_dashboard') }}" class="nav-link"><strong>Admin</strong></a></li>
                    {% endif %}
                    <li class="nav-item" style="line-height: 2;"><a href="{{ path('app_logout') }}" class="nav-link">Se déconnecter</a></li>
                {% else %}
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link btn btn-outline-success">Se connecter</a></li>
                    <li class="nav-item"><a href="{{ path('user.register') }}" class="nav-link">Créer un compte</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<main class="main container">
    {% include 'partials/flash.html.twig' %}
    {% block body %}{% endblock %}
</main>

<footer class="footer">
    <div class="footer-title">Me retrouver</div>
    <div class="hstack">
        <a href="https://github.com/tuxboy" title="Github" target="_blank" rel="noreferrer">
            <img src="/images/social/github.svg" class="lighten-dark" alt="" loading="lazy">
        </a>
        <a href="https://twitter.com/b_mallo" title="Twitter" target="_blank" rel="noreferrer">
            <img src="/images/social/twitter.svg" alt="" loading="lazy">
        </a>
    </div>

</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
