<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>{% block title 'Mon super site' %} - Powerlinks</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path('root') }}">Power links</a>
    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a href="{{ path('link.index') }}" title="Voir la liste complète des liens" class="nav-link">Liens</a>
            </li>
        </ul>
        <ul class="navbar-nav my-2 my-lg-0">
            {% if app.user %}
                <li class="nav-item">
                    <a href="{{ path('user.profile', {id: app.user.id}) }}" class="nav-link"><img src="{{ app.user.avatar }}" alt="{{ app.user.username }}" class="rounded-circle"></a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item" style="line-height: 2;"><a href="" class="nav-link"><strong>Admin</strong></a></li>
                {% endif %}
                <li class="nav-item" style="line-height: 2;"><a href="{{ path('app_logout') }}" class="nav-link">Se déconnecter</a></li>
            {% else %}
                <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link btn btn-outline-success">Se connecter</a></li>
                <li class="nav-item"><a href="{{ path('user.register') }}" class="nav-link">Créer un compte</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<main class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ message }}
        </div>
    {% endfor %}
    {% block body %}{% endblock %}
</main>

<footer class="footer">
    <div class="footer-title">Me retrouver</div>
    <div class="hstack">
        <a href="https://github.com/tuxboy" title="Github" target="_blank" rel="noreferrer">
            <img src="/images/social/github.svg" class="lighten-dark" alt="" loading="lazy">
        </a>
        <a href="https://twitter.com/b_mallo" title="Twitter" target="_blank" rel="noreferrer">
            <img src="/images/social/twitter.svg" alt="" loading="lazy">
        </a>
    </div>

</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>
